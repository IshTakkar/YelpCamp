<div class="container">
    <%- include("partials/header") %>
    <header class="jumbotron">
        <h1>YelpCamp</h1>
        <p>Welcome yourself to the best camps from all around the globe.</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new one.</a>
        </p>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top" style="width: 18rem;">
                <h4 class="card-title"><%= campground.name %></h4>
            </div>
            <% }); %>
            <%- include("partials/footer") %>
        </div>
    </div>
</div>