<%- include("partials/header") %>

<div class="container">
    <div class="row flex-column">
        <h1 class="text-center">Edit <%= campgrounds.name %></h1>
            <div style="width: 30%; margin: 30px auto;" class="d-block">
                <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campgrounds.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campgrounds.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campgrounds.description %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>   
                </form>
                <a href="/campgrounds">Go back.</a>
            </div> 
    </div>
</div>

<%- include("partials/footer") %>