<%- include("partials/header") %>

<div class="container">
    <div class="row flex-column">
        <h1 class="text-center">Edit comment</h1>
            <div style="width: 30%; margin: 30px auto;" class="d-block">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="name" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>   
                </form>
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger mb-2">Delete</button>
                </form>
                <a href="/campgrounds">Go back.</a>
            </div> 
    </div>
</div>

<%- include("partials/footer") %>