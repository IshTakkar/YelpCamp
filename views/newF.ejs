<%- include("partials/header") %>

<div class="container">
    <div class="row flex-column">
        <h1 class="text-center">New comments on <%= campgrounds.name %></h1>
            <div style="width: 30%; margin: 30px auto;" class="d-block">
                <form action="/campgrounds/<%= campgrounds._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>   
                </form>
                <a href="/campgrounds">Go back.</a>
            </div> 
    </div>
</div>

<%- include("partials/footer") %>